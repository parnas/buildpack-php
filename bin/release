# bin/release <build-dir>

cat <<EOF
---
config_vars:
  PHP_INI_SCAN_DIR: /app/php/conf
  PATH: $HOME/code/vendor/node/bin:$HOME/bin:$HOME/code/node_modules/.bin:$HOME/.dpkg/usr/bin:$PATH
default_process_types:
  web: bash boot.sh
addons: []
default_process_types: {}
EOF

# Ruby

/usr/bin/env ruby <<EOF
    $:.unshift File.expand_path("../../support/ruby/lib", __FILE__)
    require "language_pack"

    LanguagePack::Instrument.trace 'release', 'app.release' do
      if pack = LanguagePack.detect(ARGV[0], ARGV[1])
        puts pack.release
      end
    end
EOF
