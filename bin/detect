cd $1

if [[ -e app/console && -d vendor && -d web ]]; then
    echo "PHP/Symfony2"
elif [[ -f symfony && -d web ]]; then
    echo "PHP/Symfony1"
elif [[ -f library/Zend/Application.php && -d application && -d public ]]; then
    echo "PHP/Zend1"
elif [[ -f public/index.php && $(grep 'Zend\\Mvc\\Application::init' public/index.php) ]]; then
    echo "PHP/Zend2"  # Zend 2.x created via ZendSkeletonApplication
elif [[ -f framework/yii.php ]]; then
    echo "PHP/Yii"
elif [[ (-f system/classes/kohana.php || -f system/classes/Kohana.php) && -d application ]]; then
    echo "PHP/Kohana"
elif [[ -f app/Console/cake ]]; then
    echo "PHP/CakePhp"
else
    echo "PHP"
fi

if [ -f .buildpack/Debfile ]; then
  echo " Dpkg"
fi

# Ruby
/usr/bin/env ruby <<EOF
    $:.unshift File.expand_path("../../support/ruby/lib", __FILE__)
    require "language_pack"

    LanguagePack::Instrument.trace 'detect', 'app.detect' do
      if pack = LanguagePack.detect(ARGV.first)
        puts pack.name
        exit 0
      else
        puts "no"
        exit 1
      end
    end
EOF
